# http://editorconfig.org

root = true

[/backend/**]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[/backend/**/*.html]
indent_style = space
indent_size = 2

[*.{py,rst,ini}]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[default.conf]
indent_style = space
indent_size = 2

[/apps/**]
charset = utf-8
tab_width = 2
